<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/category_tag_row1_ll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:background="@drawable/z_catgory_tag_back1"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:visibility="gone"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <net.steamcrafted.materialiconlib.MaterialIconView
        android:id="@+id/category_tag_row1_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        app:materialIcon="close_circle"
        android:layout_marginLeft="10dp"
        app:materialIconColor="@color/Abi1"
        app:materialIconSize="20dp" />


    <TextView
        android:id="@+id/category_tag_row1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Abi1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="5dp"
        fontPath="fonts/Yekan_Bakh_Medium.ttf"
        android:paddingRight="10dp"/>






</LinearLayout>