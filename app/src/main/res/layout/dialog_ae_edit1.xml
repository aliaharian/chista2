<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@drawable/dialog_price_background"
    android:paddingBottom="30dp"
    android:paddingTop="20dp"
    android:orientation="vertical">


    <View
        android:layout_width="100dp"
        android:layout_height="7dp"
        android:background="@drawable/dialog_prefilter_price_headerline"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/dialog_ae_edit1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textColor="@color/tire0"
            android:textSize="14sp"
            fontPath="fonts/Yekan_Bakh_Heavy.ttf"
            android:text=""/>

        <com.skydoves.elasticviews.ElasticImageView
            android:id="@+id/dialog_ae_edit1_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_icon_arrowright2"
            app:imageView_duration="200"
            app:imageView_scale="0.9"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/dialog_ae_edit1_f1ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="right"
            >


            <TextView
                android:id="@+id/dialog_ae_edit1_f1title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نام"
                android:textColor="@color/khakestari1"
                android:textSize="13sp"
                fontPath="fonts/Yekan_Bakh_Light.ttf"
                android:layout_marginBottom="10dp"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:background="@drawable/main_heder_seach_line"
                android:gravity="left|top"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/dialog_ae_edit1_f1"                            android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:hint="نام"
                    android:gravity="right|top"
                    android:inputType="text"
                    android:singleLine="true"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="10dp"
                    fontPath="fonts/Yekan_Bakh_Medium.ttf"
                    android:textColor="@color/khakestari0"
                    android:background="@drawable/prefilter_search_edittext_back"
                    />

                <ImageView
                    android:id="@+id/dialog_ae_edit1_f1img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:paddingTop="6dp"
                    android:src="@drawable/main_icon_user"/>




            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/dialog_ae_edit1_f2ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="right"
            >


            <TextView
                android:id="@+id/dialog_ae_edit1_f2title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نام"
                android:textColor="@color/khakestari1"
                android:textSize="13sp"
                fontPath="fonts/Yekan_Bakh_Light.ttf"
                android:layout_marginBottom="10dp"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:background="@drawable/main_heder_seach_line"
                android:gravity="left|center_vertical"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/dialog_ae_edit1_f2"                            android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:hint="نام"
                    android:gravity="right|center_vertical"
                    android:inputType="text"
                    android:singleLine="true"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="10dp"
                    fontPath="fonts/Yekan_Bakh_Medium.ttf"
                    android:textColor="@color/khakestari0"
                    android:background="@drawable/prefilter_search_edittext_back"
                    />

                <ImageView
                    android:id="@+id/dialog_ae_edit1_f2img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/main_icon_user"/>




            </LinearLayout>



        </LinearLayout>



        <com.skydoves.elasticviews.ElasticLayout
            android:id="@+id/dialog_ae_edit1_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            app:layout_scale="0.95"
            app:layout_duration="200"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <com.gigamole.library.ShadowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sl_shadowed="true"
                app:sl_shadow_angle="90"
                app:sl_shadow_radius="10dp"
                app:sl_shadow_distance="10dp"
                app:sl_shadow_color="@color/Abi1_shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_back1"
                    android:padding="15dp"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تایید"
                        android:textColor="@color/sefid"
                        fontPath="fonts/Yekan_Bakh_Bold.ttf"
                        android:textSize="16sp"
                        />


                </LinearLayout>

            </com.gigamole.library.ShadowLayout>


        </com.skydoves.elasticviews.ElasticLayout>


    </LinearLayout>




</LinearLayout>