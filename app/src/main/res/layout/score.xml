<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="scoreModel"
            type="com.nikandroid.chista.viewModels.ScoreViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:paddingTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:textColor="@color/tire0"
                android:textSize="18sp"
                fontPath="fonts/Yekan_Bakh_Heavy.ttf"
                android:text="امتیاز"/>

            <com.skydoves.elasticviews.ElasticImageView
                android:id="@+id/score_actionbar_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_icon"
                android:background="@drawable/login_phone_edittext"
                android:padding="10dp"
                android:adjustViewBounds="true"
                app:imageView_duration="200"
                app:imageView_scale="0.85"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mycomments_header_back"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/score_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/tire0"
                    android:textSize="14sp"
                    fontPath="fonts/Yekan_Bakh_Medium.ttf"
                    android:text="18 ساعت"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/khakestari0"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    fontPath="fonts/Yekan_Bakh_Light.ttf"
                    android:text="فعالیت"/>


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="@color/zard2_23darsad"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/score_followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/tire0"
                    android:textSize="14sp"
                    fontPath="fonts/Yekan_Bakh_Medium.ttf"
                    android:text="185 نفر"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/khakestari0"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    fontPath="fonts/Yekan_Bakh_Light.ttf"
                    android:text="مخاطبین"/>


            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="@color/zard2_23darsad"/>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/score_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        fontPath="fonts/Yekan_Bakh_Medium.ttf"
                        android:textColor="@color/tire0"
                        android:text="4.2"/>

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:scaleType="center"
                        app:materialIcon="star"
                        android:layout_marginRight="0dp"
                        app:materialIconColor="@color/zard"
                        app:materialIconSize="18dp" />

                </LinearLayout>


                <TextView
                    fontPath="fonts/Yekan_Bakh_Light.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="186 رای"
                    android:textColor="@color/khakestari0"
                    android:textSize="14sp" />


            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <com.skydoves.elasticviews.ElasticLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_phone_edittext"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/khakestari0"
                        android:textSize="11sp"
                        fontPath="fonts/Yekan_Bakh_Light.ttf"
                        android:text="محدود سازی" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/main_icon_filter2"
                        android:adjustViewBounds="true"
                        />




                </LinearLayout>




            </com.skydoves.elasticviews.ElasticLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:textColor="@color/khakestari0"
                android:textSize="13sp"
                fontPath="fonts/Yekan_Bakh_Bold.ttf"
                android:text="نظرات" />


        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/score_list"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="match_parent"
            />

    </LinearLayout>

</layout>