<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@drawable/dialog_price_background"
    android:paddingBottom="30dp"
    android:paddingTop="20dp"
    android:orientation="vertical">


    <View
        android:layout_width="100dp"
        android:layout_height="7dp"
        android:background="@drawable/dialog_prefilter_price_headerline"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:id="@+id/dialog_sa_tags_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/dialog_sa_tags_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textColor="@color/tire0"
            android:textSize="14sp"
            fontPath="fonts/Yekan_Bakh_Heavy.ttf"
            android:text="ثبت نام به عنوان مشاور"/>

        <ImageView
            android:id="@+id/dialog_sa_tags_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_icon_arrowright2"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.wefika.flowlayout.FlowLayout
            android:id="@+id/dialog_sa_tags_tagslist"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|top"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            >
        </com.wefika.flowlayout.FlowLayout>



        <com.skydoves.elasticviews.ElasticLayout
            android:id="@+id/dialog_sa_tags_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            app:layout_scale="0.95"
            app:layout_duration="200"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <com.gigamole.library.ShadowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sl_shadowed="true"
                app:sl_shadow_angle="90"
                app:sl_shadow_radius="10dp"
                app:sl_shadow_distance="10dp"
                app:sl_shadow_color="@color/Abi1_shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_back1"
                    android:padding="15dp"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/prefilter_submit_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تایید"
                        android:textColor="@color/sefid"
                        fontPath="fonts/Yekan_Bakh_Bold.ttf"
                        android:textSize="16sp"
                        />


                </LinearLayout>

            </com.gigamole.library.ShadowLayout>


        </com.skydoves.elasticviews.ElasticLayout>



    </LinearLayout>




</LinearLayout>