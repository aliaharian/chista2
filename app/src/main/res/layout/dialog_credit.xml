<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/dialog_credit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="افزایش اعتبار"
        android:textSize="18sp"
        fontPath="fonts/YekanB.ttf"
        android:textColor="@color/tire0"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="برای مثال 2000 تومان"
            android:background="@drawable/spinner_frame1"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مقدار شارژ"
            android:layout_marginLeft="10dp"
            android:textColor="@color/tire0"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <com.skydoves.elasticviews.ElasticButton
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="+20/000"
            android:background="@color/Abi3"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:textColor="@color/sefid"
            app:button_cornerRadius="10dp"
            app:button_scale="0.85"
            app:button_duration="200"/>

        <com.skydoves.elasticviews.ElasticButton
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="+10/000"
            android:background="@color/Abi3"
            android:layout_marginRight="10dp"
            android:textSize="12sp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:textColor="@color/sefid"
            app:button_cornerRadius="10dp"
            app:button_scale="0.85"
            app:button_duration="200"/>

        <com.skydoves.elasticviews.ElasticButton
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="+5000"
            android:background="@color/Abi3"
            android:textSize="12sp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:textColor="@color/sefid"
            app:button_cornerRadius="10dp"
            app:button_scale="0.85"
            app:button_duration="200"/>



    </LinearLayout>


    <com.skydoves.elasticviews.ElasticButton
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="پرداخت"
        android:background="@color/Abi2"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:textColor="@color/sefid"
        app:button_cornerRadius="10dp"
        app:button_scale="0.85"
        android:layout_marginBottom="20dp"
        app:button_duration="200"/>




</LinearLayout>