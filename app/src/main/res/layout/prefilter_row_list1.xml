<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">




    <net.steamcrafted.materialiconlib.MaterialIconView
        android:id="@+id/prefilter_row_list1_arrow"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:materialIcon="chevron_left"
        app:materialIconColor="@color/khakestari1"
        app:materialIconSize="24dp" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/prefilter_row_list1_des"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="left"
                android:textColor="@color/khakestari0"
                fontPath="fonts/Yekan_Bakh_Light.ttf"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/prefilter_row_list1_blupoint"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:adjustViewBounds="true"
                android:layout_marginRight="6dp"
                android:visibility="gone"
                android:src="@drawable/z_circle_blue"/>



            <TextView
                android:id="@+id/prefilter_row_list1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/khakestari0"
                android:layout_marginRight="6dp"
                android:textSize="14sp"
                fontPath="fonts/Yekan_Bakh_Medium.ttf"
                android:text="TextView" />


        </LinearLayout>



        <ImageView
            android:id="@+id/prefilter_row_list1_icon"
            android:layout_height="wrap_content"
            android:layout_width="25dp"
            android:adjustViewBounds="true"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/autism" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/khakestari_20darsad"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />


</LinearLayout>