<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            >


            <com.github.florent37.shapeofview.shapes.CircleView
                android:id="@+id/main_line_adviserbox2_row_imgcircle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shape_circle_borderColor="@color/khakestari1"
                android:background="@color/sefid"
                app:shape_circle_borderWidth="3px">

                <com.github.florent37.shapeofview.shapes.CircleView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:shape_circle_borderColor="@color/sefid"
                    android:background="@color/sefid"
                    app:shape_circle_borderWidth="7px">

                    <ImageView
                        android:id="@+id/main_line_adviserbox2_row_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:src="@drawable/moshaver2" />

                </com.github.florent37.shapeofview.shapes.CircleView>

            </com.github.florent37.shapeofview.shapes.CircleView>

            <ImageView
                android:id="@+id/main_line_adviserbox2_row_onlinestatus"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:adjustViewBounds="true"
                android:layout_alignBottom="@+id/main_line_adviserbox2_row_imgcircle"
                android:layout_alignRight="@+id/main_line_adviserbox2_row_imgcircle"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/z_circle_online"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/main_line_adviserbox2_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" محمد رضا رحمانی"
            android:textColor="@color/siyah"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            fontPath="fonts/Yekan_Bakh_Bold.ttf"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/main_line_adviserbox2_row_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مشاور ویژه و متخصص گفتار درمانی"
            android:gravity="center"
            android:layout_marginTop="5dp"
            fontPath="fonts/Yekan_Bakh_Light.ttf"
            android:textSize="11sp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_line_adviserbox2_row_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/Abi2"
                fontPath="fonts/Yekan_Bakh_Medium.ttf"
                android:layout_marginRight="5dp"
                android:text="2100 تومان"/>

            <TextView
                android:id="@+id/main_line_adviserbox2_row_pricelbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/Abi2"
                fontPath="fonts/Yekan_Bakh_Light.ttf"
                android:text="هر دقیقه"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:adjustViewBounds="true"
                android:src="@drawable/main_video_icon"/>




        </LinearLayout>



    </LinearLayout>




</LinearLayout>