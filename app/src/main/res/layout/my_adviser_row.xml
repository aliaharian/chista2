<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="100"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/myadviser_row_btnarea"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:gravity="center"
        android:orientation="horizontal">

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:id="@+id/myadviser_row_bookmark"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:scaleType="center"
            app:materialIcon="bookmark"
            app:materialIconColor="@color/ghermez"
            app:materialIconSize="22dp" />


        <net.steamcrafted.materialiconlib.MaterialIconView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:scaleType="center"
            app:materialIcon="video"
            app:materialIconColor="#345ea9"
            app:materialIconSize="22dp" />

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:materialIcon="message_text"
            app:materialIconColor="#47a8df"
            app:materialIconSize="22dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="57"
        android:paddingRight="5dp"
        android:gravity="right|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myadviser_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="دکتر محمد رضا رحمانی"
            android:textColor="@color/siyah"
            android:textSize="13sp"
            fontPath="fonts/sansB.ttf"
            android:gravity="right"
            />
        <TextView
            android:id="@+id/myadviser_row_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:gravity="right"
            android:textSize="10sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/myadviser_row_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:textColor="@color/khakestari2"
                android:text="-"/>
            <net.steamcrafted.materialiconlib.MaterialIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:scaleType="center"
                app:materialIcon="currency_usd"
                android:layout_marginRight="10dp"
                app:materialIconColor="@color/khakestari2"
                app:materialIconSize="12dp" />
            <TextView
                android:id="@+id/myadviser_row_hr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:textColor="@color/khakestari2"
                android:text="52 ساعت"/>
            <net.steamcrafted.materialiconlib.MaterialIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:scaleType="center"
                app:materialIcon="video"
                android:layout_marginRight="10dp"
                app:materialIconColor="@color/khakestari2"
                app:materialIconSize="12dp" />


            <TextView
                android:id="@+id/myadviser_row_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:textColor="@color/khakestari2"
                android:text="تهران"/>
            <net.steamcrafted.materialiconlib.MaterialIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:scaleType="center"
                app:materialIcon="map_marker"
                android:layout_marginRight="10dp"
                app:materialIconColor="@color/khakestari2"
                app:materialIconSize="12dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/main_rating_back"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/myadviser_row_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    fontPath="fonts/sansB.ttf"
                    android:textColor="@color/sefid"
                    android:text="-"/>
                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:scaleType="center"
                    app:materialIcon="star"
                    android:layout_marginRight="0dp"
                    app:materialIconColor="@color/sefid"
                    app:materialIconSize="11dp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="13">


        <com.github.florent37.shapeofview.shapes.CircleView
            android:id="@+id/myadviser_row_imgcircle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="13"
            app:shape_circle_borderColor="@color/sefid"
            android:background="@color/sefid"
            app:shape_circle_borderWidth="2dp">

            <ImageView
                android:id="@+id/myadviser_row_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/moshaver2" />

        </com.github.florent37.shapeofview.shapes.CircleView>

        <ImageView
            android:id="@+id/myadviser_row_onlinestatus"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:adjustViewBounds="true"
            android:layout_alignBottom="@+id/myadviser_row_imgcircle"
            android:layout_alignLeft="@+id/myadviser_row_imgcircle"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/z_circle_online"/>

    </RelativeLayout>


</LinearLayout>


