            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="160dp">
                <com.github.florent37.shapeofview.shapes.CircleView
                    android:id="@+id/setting_user_imagecircle"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="13"
                    app:shape_circle_borderColor="@color/sefid"
                    android:background="@color/sefid"
                    app:shape_circle_borderWidth="2dp">

                    <ImageView
                        android:id="@+id/setting_user_avatar_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:src="@drawable/moshaver2" />

                </com.github.florent37.shapeofview.shapes.CircleView>



                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:scaleType="center"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    app:materialIcon="camera"
                    app:materialIconColor="@color/tire0"
                    app:materialIconSize="42dp" />



            </RelativeLayout>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/setting_user_username_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/setting_user_username2"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    fontPath="fonts/YekanM2.ttf"
                    android:textColor="@color/tire0"
                    android:layout_marginRight="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/setting_user_username1"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"

                    android:textColor="@color/tire0"
                    android:layout_marginRight="10dp"
                    android:text="نام کاربری" />





            </LinearLayout>
            <View
