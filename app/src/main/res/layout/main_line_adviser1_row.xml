<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:gravity="center_vertical"
        android:weightSum="100"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:paddingRight="5dp"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:scaleType="center"
                        app:materialIcon="star"
                        android:layout_marginRight="0dp"
                        app:materialIconColor="@color/zard"
                        app:materialIconSize="14dp" />

                    <TextView
                        android:id="@+id/main_line_adviserbox1_row_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        fontPath="fonts/Yekan_Bakh_Medium.ttf"
                        android:textColor="@color/khakestari0"
                        android:text="4.2"/>


                </LinearLayout>

                <TextView
                    android:id="@+id/main_line_adviserbox1_row_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="دکتر محمد رضا رحمانی"
                    android:textColor="@color/siyah"
                    android:textSize="15sp"
                    fontPath="fonts/Yekan_Bakh_Bold.ttf"
                    android:gravity="right"
                    />

            </LinearLayout>





            <TextView
                android:id="@+id/main_line_adviserbox1_row_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="desc"
                fontPath="fonts/Yekan_Bakh_Light.ttf"
                android:gravity="right"
                android:textSize="12sp"
                android:maxLines="2"
                android:layout_marginTop="3dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/main_line_adviserbox1_row_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/Abi2"
                    fontPath="fonts/Yekan_Bakh_Medium.ttf"
                    android:layout_marginRight="5dp"
                    android:text="2100 تومان"/>

                <TextView
                    android:id="@+id/main_line_adviserbox1_row_pricelbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/Abi2"
                    fontPath="fonts/Yekan_Bakh_Light.ttf"
                    android:text="هر دقیقه"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/main_video_icon"/>




            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="20">


            <com.github.florent37.shapeofview.shapes.CircleView
                android:id="@+id/main_line_adviserbox1_row_imgcircle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shape_circle_borderColor="@color/khakestari1"
                android:background="@color/sefid"
                app:shape_circle_borderWidth="3px">

                <com.github.florent37.shapeofview.shapes.CircleView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:shape_circle_borderColor="@color/sefid"
                    android:background="@color/sefid"
                    app:shape_circle_borderWidth="7px">

                    <ImageView
                        android:id="@+id/main_line_adviserbox1_row_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:src="@drawable/avatar_tmp1" />

                </com.github.florent37.shapeofview.shapes.CircleView>

            </com.github.florent37.shapeofview.shapes.CircleView>

            <ImageView
                android:id="@+id/main_line_adviserbox1_row_onlinestatus"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:adjustViewBounds="true"
                android:layout_alignBottom="@+id/main_line_adviserbox1_row_imgcircle"
                android:layout_alignRight="@+id/main_line_adviserbox1_row_imgcircle"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/z_circle_online"/>

        </RelativeLayout>

    </LinearLayout>

   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:layout_marginRight="20dp"
       android:layout_marginLeft="20dp"
       android:background="@color/khakestari_20darsad"/>


</LinearLayout>


