<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <variable
            name="mainModel"
            type="com.nikandroid.chista.viewModels.MainViewModel" />
    </data>


<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sefid"
    android:id="@+id/main_rooview"
    tools:context=".Activity.Main">

    <ProgressBar
        android:id="@+id/main_prog"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"/>


    <com.nikandroid.chista.CustomViewPager
        android:id="@+id/main_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/sefid">


    </com.nikandroid.chista.CustomViewPager>





        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >

            <devlight.io.library.ntb.NavigationTabBar
                android:id="@+id/main_tab1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/main_framelayout_back"

                android:layout_alignParentBottom="true"
                app:ntb_active_color="@color/Abi1"
                app:ntb_badge_gravity="top"
                app:ntb_badge_position="right"
                app:ntb_badged="false"
                app:ntb_bg_color="#00000000"
                app:ntb_inactive_color="@color/khakestari2"
                app:ntb_scaled="true"
                app:ntb_swiped="true"
                app:ntb_tinted="false"
                app:ntb_title_mode="all"
                app:ntb_titled="false" />

        </FrameLayout>




</RelativeLayout>

</layout>