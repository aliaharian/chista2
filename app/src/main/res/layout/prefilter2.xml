<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sefid"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    >

    <LinearLayout
        android:id="@+id/prefilter2_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/prefilter2_actionbar_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/khakestari"
            android:textSize="14sp"
            fontPath="fonts/Yekan_Bakh_Light.ttf"
            android:visibility="visible"
            android:text="پاک کردن"/>



        <TextView
            android:id="@+id/prefilter2_actionbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:textColor="@color/tire0"
            android:textSize="18sp"
            fontPath="fonts/Yekan_Bakh_Heavy.ttf"
            android:text="عنوان"/>

        <com.skydoves.elasticviews.ElasticImageView
            android:id="@+id/prefilter2_actionbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_icon"
            android:background="@drawable/login_phone_edittext"
            android:padding="10dp"
            android:adjustViewBounds="true"
            app:imageView_duration="200"
            app:imageView_scale="0.85"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prefilter2_actionbar"
        android:layout_above="@id/prefilter2_submit"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/prefilter2_layout_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="آنلاین"
                        android:textColor="@color/khakestari0"
                        android:textSize="14sp"
                        fontPath="fonts/Yekan_Bakh_Medium.ttf"
                        />

                    <CheckBox
                        android:id="@+id/prefilter2_status_online"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:theme="@style/checkBoxStyle1"
                        app:srcCompat="@drawable/autism" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/khakestari_20darsad"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />


            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="آفلاین"
                        android:textColor="@color/khakestari0"
                        android:textSize="14sp"
                        fontPath="fonts/Yekan_Bakh_Medium.ttf"
                        />

                    <CheckBox
                        android:id="@+id/prefilter2_status_offline"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:theme="@style/checkBoxStyle1"
                        app:srcCompat="@drawable/autism" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/khakestari_20darsad"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />


            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="مشغول"
                        android:textColor="@color/khakestari0"
                        android:textSize="14sp"
                        fontPath="fonts/Yekan_Bakh_Medium.ttf"
                        />

                    <CheckBox
                        android:id="@+id/prefilter2_status_busy"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:theme="@style/checkBoxStyle1"
                        app:srcCompat="@drawable/autism" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/khakestari_20darsad"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/prefilter2_layout_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="مرد"
                        android:textColor="@color/khakestari0"
                        android:textSize="14sp"
                        fontPath="fonts/Yekan_Bakh_Medium.ttf"
                        />

                    <CheckBox
                        android:id="@+id/prefilter2_gender_man"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:theme="@style/checkBoxStyle1"
                        app:srcCompat="@drawable/autism" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/khakestari_20darsad"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />


            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="زن"
                        android:textColor="@color/khakestari0"
                        android:textSize="14sp"
                        fontPath="fonts/Yekan_Bakh_Medium.ttf"
                        />

                    <CheckBox
                        android:id="@+id/prefilter2_gender_woman"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:theme="@style/checkBoxStyle1"
                        app:srcCompat="@drawable/autism" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/khakestari_20darsad"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />


            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="هردو"
                        android:textColor="@color/khakestari0"
                        android:textSize="14sp"
                        fontPath="fonts/Yekan_Bakh_Medium.ttf"
                        />

                    <CheckBox
                        android:id="@+id/prefilter2_gender_both"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:theme="@style/checkBoxStyle1"
                        app:srcCompat="@drawable/autism" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/khakestari_20darsad"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/prefilter2_layout_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="قیمت از"
                    android:textColor="@color/khakestari0"
                    fontPath="fonts/Yekan_Bakh_Light.ttf"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>


                <LinearLayout
                    android:id="@+id/prefilter2_price1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:background="@drawable/main_heder_seach_line"
                    android:gravity="left|center_vertical"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:orientation="horizontal">

                    <com.skydoves.elasticviews.ElasticImageView
                        android:id="@+id/prefilter2_price1_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/main_icon_delete"
                        android:visibility="invisible"
                        app:imageView_duration="200"
                        app:imageView_scale="0.85"/>

                    <TextView
                        android:id="@+id/prefilter2_price1_title"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="مثلا ۲،۰۰۰ تومان"
                        android:gravity="right"
                        fontPath="fonts/Yekan_Bakh_Medium.ttf"
                        android:textColor="@color/khakestari1"
                        android:background="@drawable/prefilter_search_edittext_back"
                        />


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="20dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="قیمت تا"
                    android:textColor="@color/khakestari0"
                    fontPath="fonts/Yekan_Bakh_Light.ttf"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>


                <LinearLayout
                    android:id="@+id/prefilter2_price2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:background="@drawable/main_heder_seach_line"
                    android:gravity="left|center_vertical"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:orientation="horizontal">

                    <com.skydoves.elasticviews.ElasticImageView
                        android:id="@+id/prefilter2_price2_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/main_icon_delete"
                        android:visibility="invisible"
                        app:imageView_duration="200"
                        app:imageView_scale="0.85"/>

                    <TextView
                        android:id="@+id/prefilter2_price2_title"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="مثلا ۵،۰۰۰ تومان"
                        android:gravity="right"
                        fontPath="fonts/Yekan_Bakh_Medium.ttf"
                        android:textColor="@color/khakestari1"
                        android:background="@drawable/prefilter_search_edittext_back"
                        />


                </LinearLayout>



            </LinearLayout>



        </LinearLayout>



    </LinearLayout>


    <ProgressBar
        android:id="@+id/prefilter2_prog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />



    <com.skydoves.elasticviews.ElasticLayout
        android:id="@+id/prefilter2_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-20dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginBottom="10dp"
        app:layout_scale="0.95"
        app:layout_duration="200"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <com.gigamole.library.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:sl_shadowed="true"
            app:sl_shadow_angle="90"
            app:sl_shadow_radius="10dp"
            app:sl_shadow_distance="10dp"
            app:sl_shadow_color="@color/Abi1_shadow">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/btn_back1"
                android:padding="20dp"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تایید"
                    android:textColor="@color/sefid"
                    fontPath="fonts/Yekan_Bakh_Bold.ttf"
                    android:textSize="16sp"
                    />


            </LinearLayout>

        </com.gigamole.library.ShadowLayout>


    </com.skydoves.elasticviews.ElasticLayout>




</RelativeLayout>
